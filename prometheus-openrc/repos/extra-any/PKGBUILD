source=("prometheus.confd"
       "prometheus.initd")
sha256sums=('940f1a3ad08f0eb370951b1a42c29a9217cba9ae2f5cb6cc675bdec1d51e8309'
            '90d49549f24265aef6d8ea0cd703a745974a4833bafdd580c8304057ff38a6d9')

